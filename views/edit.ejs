<link rel = "stylesheet" href = "styles/main.css" />

<%- include("partials/header.ejs") %>

<div class = "divider"></div>
<div id = editBody>
    <h1 id = "blogPost-H1">Edit your Blog Post
        <svg id = "checkPen" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
        </svg>
    </h1>

    <hr id = "edit-hr"/>

    <form action="/submit-edit/" method="POST" id = "submit-editForm" autocomplete="off">
        <input type="text" class = "title-form" value="<%= post.title %>" name = "editedTitle" required>
        <input type="text" class = "author-form" value="<%= post.author %>" name = "editedAuthor" required>
        <textarea class="body-form" name="editedText" rows="30" required><%= post.post_body %></textarea>
        <input type="number" name= "PostId" value=<%= post.id %> hidden>
        <div class = "submit-container">
            <input class = "submit-button grow-button" type="submit" value="Submit Edits">
        </div>
    </form>
</div>

<div class = "divider"></div>

<%- include("partials/footer.ejs") %>